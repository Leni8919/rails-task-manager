<div class="container my-4">
  <h1>This is a new task</h1>
  <p>Fill in the form :</p>

  <div class="">
    <%= form_for(@task) do |f| %>
      <div class="form-group" autocomplete="off">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div class="form-group" autocomplete="off">
        <%= f.label :details %>
        <%= f.text_field :details %>
      </div>

      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>

  <div>
    <p><%= link_to 'Go back to your ToDo', tasks_path  %></p>
  </div>

</div>
